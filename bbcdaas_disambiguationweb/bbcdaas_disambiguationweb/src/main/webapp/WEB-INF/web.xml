<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
            http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
		
	<display-name>BBC-DaaS DisambiguationWeb</display-name>
	
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>
			/WEB-INF/disambiguationWeb-servlet.xml
			/WEB-INF/disambiguationWeb-security-context.xml
		</param-value>
	</context-param>
	
	<filter>
        <filter-name>UTF8Filter</filter-name>
        <filter-class>de.bbcdaas.disambiguationweb.filter.UTF8Filter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>UTF8Filter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
	
	<servlet>
        <servlet-name>disambiguationWeb</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
	
	<servlet-mapping>
        <servlet-name>disambiguationWeb</servlet-name>
        <url-pattern>*.do</url-pattern>
    </servlet-mapping>
		
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
	
	<welcome-file-list>
      <welcome-file>views/index.jsp</welcome-file>
    </welcome-file-list>
		
	<filter>
		<filter-name>springSecurityFilterChain</filter-name>
		<filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
	</filter>

	<filter-mapping>
	  <filter-name>springSecurityFilterChain</filter-name>
	  <url-pattern>/*</url-pattern>
	</filter-mapping>
		
</web-app>